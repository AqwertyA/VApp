<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.v.minesweeper.framework.viewmodel.MineModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/mine_view_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/layout_functions"
            tools:ignore="NestedScrolling">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.v.minesweeper.widget.MineView
                    android:id="@+id/mine_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    bind:state="@{model.state}" />

            </HorizontalScrollView>
        </ScrollView>

        <LinearLayout
            android:id="@+id/layout_functions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{@string/searchState(model.getSearchState(model.state))}"
                tools:text="@string/searchState" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->model.changeState()}"
                android:text="@string/change_mode" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="play"
                android:text="@string/play" />

        </LinearLayout>

    </RelativeLayout>
</layout>
